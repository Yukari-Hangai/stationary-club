<% if users.exists? %>
  <% users.each do |user| %>
    <table>
      <thead></thead>
      <tbody>
        <tr>
          <td>会員id: <%= user.id %></td>
          <td>
            <%= link_to edit_admin_user_path(user) do %>
              <%= image_tag user.get_profile_image(50,50) %>
              <%= user.name %>
            <% end %>
          </td>
          <td>投稿数: <%= user.posts.count %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td>退会フラグ: <%= user.is_deleted ? "退会" : "有効" %></td>
          <td>
            <%= link_to "投稿一覧へ", admin_user_posts_path(user), class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>会員はいません</p>
<% end %>