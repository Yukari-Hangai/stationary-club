<div style="text-align:center;">
　 <h1 style="background-image: url(<%= asset_path('h1_green.png') %>); "> 会員情報</h1>
</div>

<p> <%= notice %> </p>

<%= image_tag @user.get_profile_image(150,150) %>
<br>

<table>
  <tr>
    <th>会員ID : </th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>名前 : </th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>メールアドレス : </th>
    <td><%= @user.email %></td>
  <tr>
    <th>会員ステータス : </th>
    <td>
      <%= form_with model: @user, url:admin_user_path(@user) do |f| %>
        <%= f.select :is_deleted, [["有効", "false"], ["退会", "true"]]  %>
        <%= f.submit '変更を保存'%>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to '戻る', :back %>