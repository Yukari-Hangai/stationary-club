<div style="text-align:center;">
  <h1 style="background-image: url(<%= asset_path('h1_blue.png') %>); "> 投稿編集</h1>
</div>

<%= form_with model: @post, url: post_path, method: :patch do |f| %>
  <table class="table">
    <tr>
      <th>投稿画像</th>
      <th><%= f.file_field :image, accept: "image/*" %></th>
    </tr>
    <tr>
      <th>本文</th>
      <th><%= f.text_area :text %></th>
    </tr>
  </table>
    <%= f.submit '保存' %>
<% end %>